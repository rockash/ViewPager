

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="visible">
    <LinearLayout
    android:orientation="vertical"
    android:id="@+id/layout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_enter"
        android:background="@drawable/text_field"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_enter"
        android:background="@drawable/text_field"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:id="@+id/dateofbirth"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1">

        <EditText
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_margin="10dp"
            android:id="@+id/dateofbirth_enter"
            android:clickable="true"
            android:background="@drawable/text_field" />

        <Button
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:background="@drawable/my_appointment_iconn"
        android:id="@+id/calendar_button"
        android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:foregroundGravity="center_horizontal" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:id="@+id/mobileno"
        android:layout_marginLeft="10dp" />

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <EditText
           android:layout_width="79dp"
           android:layout_height="match_parent"
           android:layout_margin="10dp"
           android:id="@+id/mobileno_enter1"
           android:background="@drawable/text_field"
           android:inputType="phone"
           android:maxLength="2"/>
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:id="@+id/mobileno_enter2"
           android:background="@drawable/text_field"
           android:layout_weight="1"
           android:inputType="phone"
           android:maxLength="10"/>

   </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landline Number"
        android:id="@+id/landlineno"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="right">

        <EditText
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/landlineno_enter1"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.45"
            android:inputType="phone"
            android:maxLength="2"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:id="@+id/landlineno_enter2"
            android:background="@drawable/text_field"
            android:inputType="none"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="0.55" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/email"
        android:layout_marginLeft="10dp"
        android:inputType="textEmailAddress" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_enter"
        android:background="@drawable/text_field"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/gender"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_enter"
            android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton_male"
            android:text="Male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobutton_female"
                android:text="Female"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobutton_other"
                android:text="Other"/>

        </RadioGroup>

        </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Next"
        android:id="@+id/nextbutton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="90dp" />
    </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pincode_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="6"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Line 1"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/addressline1_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:inputType="textLongMessage|textPostalAddress"
            android:layout_marginRight="10dp" />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Line 2"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressline2_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City/Area"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityarea_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/country_enter"
            android:background="@drawable/text_field"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relation"
            android:layout_marginLeft="10dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/relation_enter"
            android:scrollbars="vertical"
            android:background="@drawable/textfield_spinner"
            android:entries="@array/relation"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Previous"
                android:id="@+id/previousbutton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Submit"
                android:id="@+id/submitbutton"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>



</LinearLayout>
